<% content_for :head do %>
  <base href="http://www.mokomo.cn/"/>
<% end %>
<% case @share_obj.class.to_s %>
  <% when 'Site' %>
    <%= render file: "frontend/share/_share_site.html.erb" %>
  <% when 'User' %>
    <%= render file: "frontend/share/_share_user.html.erb" %>
  <% when 'Community' %>
    <%= render file: "frontend/share/_share_community.html.erb" %>
  <% else %>
    <%= render file: "frontend/share/_share_default.html.erb" %>
<% end %>

<%= render file: @cms_site.template_dir + '_footer.html' %>
