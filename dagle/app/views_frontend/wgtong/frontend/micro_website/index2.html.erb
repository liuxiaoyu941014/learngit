<style type="text/css">
  @media (max-width: 767px) {
    .slider-style-three .item, .slider-style-three .container{
      min-height: 200px !important;
    }
  }
  .nav-four {
    padding: 5px;
  }
  .nav-four-img {
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
  }
  .nav-four-box {
    box-shadow: 0px 5px 5px #999;
    padding: 5px;
    background-color: #fff;
  }
  .nav-four-text {
    margin: 0px;
    text-align: center;
  }
</style>

<div class="main-wrapper">
  <div class="container" style="background-color: #fff;">
    <!-- banner -->
    <div class="row">
      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="3000" >
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
          <li data-target="#carousel-example-generic" data-slide-to="1"></li>
          <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <% if Keystore.value_for('wechat-index-banner01-380×200').present? %>
              <% wechat_index_banner01 = Keystore.value_for('wechat-index-banner01-380×200').split('|') %>
              <a href="<%= wechat_index_banner01[1] || 'javascript:void(0)' %>">
                <img src="<%= wechat_index_banner01[0] %>" alt="" class="img-responsive" >
              </a>
            <% end %>
          </div>
          <div class="item">
            <% if Keystore.value_for('wechat-index-banner02-380×200').present? %>
              <% wechat_index_banner02 = Keystore.value_for('wechat-index-banner02-380×200').split('|') %>
              <a href="<%= wechat_index_banner02[1] || 'javascript:void(0)' %>">
                <img src="<%= wechat_index_banner02[0] %>" alt="" class="img-responsive" >
              </a>
            <% end %>
          </div>
          <div class="item">
            <% if Keystore.value_for('wechat-index-banner03-380×200').present? %>
              <% wechat_index_banner03 = Keystore.value_for('wechat-index-banner03-380×200').split('|') %>
              <a href="<%= wechat_index_banner03[1] || 'javascript:void(0)' %>">
                <img src="<%= wechat_index_banner03[0] %>" alt="" class="img-responsive" >
              </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- 热门活动 -->
  <div class="container-fulid">
    <div class="row" style="margin: 10px 0px 20px 0px;">
      <div class="col-md-6 col-xs-6 col-sm-6 nav-four">
        <img src="/templetes/newshub/images/recent/product1.jpg" class="img-responsive nav-four-img">
        <div class="nav-four-box">
          <p class="nav-four-text">活动报名</p>
        </div>
      </div>
      <div class="col-md-6 col-xs-6 col-sm-6 nav-four">
        <img src="/templetes/newshub/images/recent/product3.jpg" class="img-responsive nav-four-img">
        <div class="nav-four-box">
          <p class="nav-four-text">场馆信息</p>
        </div>
      </div>
      <div class="col-md-6 col-xs-6 col-sm-6 nav-four">
        <img src="/templetes/newshub/images/recent/product2.jpg" class="img-responsive nav-four-img">
        <div class="nav-four-box">
          <p class="nav-four-text">新闻资讯</p>
        </div>
      </div>
      <div class="col-md-6 col-xs-6 col-sm-6 nav-four">
        <img src="/templetes/newshub/images/recent/product4.jpg" class="img-responsive nav-four-img">
        <div class="nav-four-box">
          <p class="nav-four-text">近期热点</p>
        </div>
      </div>
    </div>
  </div>

  <!-- 活动预告 -->
  <div class="container-fulid">
    <div class="row" style="margin: 20px 0px;">
      <div style="margin-bottom: 20px;">
        <h4 class="text-center" style="margin: 0px;">活动预告</h4>
        <p style="width: 30px;border: 1px solid #e84f17;margin: 3px auto;"></p>
      </div>
      <% @wechat_index_hot_product.each do |product| %>
      <div class="row" style="margin-bottom: 10px;">
        <div class="col-md-4 col-xs-4 col-sm-4" style="padding: 0px;">
          <img src="<%= product.first_image %>" class="img-responsive" >
        </div>
        <div class="col-md-8 col-xs-8 col-sm-8">
          <p><%= product.name.truncate(38) %></p>
          <p style="margin: 0px;">
            <span>价格：
              <b style="color: #00a2f2;">
                <% if product.sell_price > 0 %>
                  <%= product.sell_price / 100.0 %>
                <% else %>
                  免费
                <% end %>
              </b>
            </span>&nbsp;&nbsp;
            <span>状态：
              <b style="color: #00a2f2;">
                <% if product.status == 'open' %>
                  进行中
                <% elsif product.status == 'completed' %>
                  已售完
                <% elsif product.status == 'pending' %>
                  未开始
                <% elsif product.status == 'closed' %>
                  已结束
                <% else %>
                  未发布
                <% end %>
              </b>
            </span>
          </p>
        </div>
      </div>
      <% end %>
      <p class="text-right"><a href="/micro_website/wechat_products">查看更多&gt;&gt;</a></p>
    </div>
  </div>

  <!-- 场馆展示 -->
  <div class="container-fulid">
    <div class="row" style="margin: 20px 0px;">
      <h4 style="padding-left: 5px;border-left: 5px solid #e84f17;">热门场馆<small class="pull-right" style="padding-right: 5px;"><a href="/micro_website/wechat_sites">查看更多&gt;&gt;</a></small></h4>
      <ul class="entertainment-slider" style="padding: 0px;">
        <% @wechat_index_hot_site.each do |site| %>
          <li>
            <div class="entertainment">
              <div class="entertainment-image">
                <img class="img-responsive" src="<%= site.first_image %>" alt="Image">
              </div>
              <div class="entertainment-info text-left">
                <h2><%= site.title %></h2>
                <p>地址：
                  <% if site.address_line.present? %>
                    <%= site.address_line %>
                  <% else %>
                    暂无
                  <% end %>
                </p>
                <p>联系电话：
                  <% if site.contact_phone.present? %>
                    <%= site.contact_phone %>
                  <% else %>
                    <%= site.phone %>
                  <% end %>
                </p>
                <p><%= site.description.truncate(70) %></p>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
      <p class="text-center" style="margin: 0px;"><small style="color: #ccc;">左右滑动场馆，查看更多！</small></p>
    </div>
  </div>

  <!-- 新闻资讯 -->
  <div class="container-fulid">
    <div class="row" style="margin: 20px 0px;">
      <div style="margin-bottom: 20px;">
        <h4 class="text-center" style="margin: 0px;">新闻资讯</h4>
        <p style="width: 30px;border: 1px solid #e84f17;margin: 3px auto;"></p>
      </div>
      <% Cms::Page.hot(@cms_site.id, 9, channel: 'wechat').each do |page| %>
      <div class="row">
        <div class="col-md-8 col-xs-8 col-sm-8">
          <p>【<%= site.properties.map{|p| ::Site::PROPERTIES[p.to_sym]}.compact.join('，') %>】<%= page.title.truncate(15) %></p>
        </div>
        <div class="col-md-4 col-xs-4 col-sm-4">
          <p><i class="fa fa-clock-o">&nbsp;</i><%= distance_of_time_in_words_to_now(page.updated_at) %>前</p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div><!-- main-wrapper --> 

<%= render file: 'frontend/micro_website/_footer.html.erb' %>
