<%= render file: @cms_site.template_dir + '_header.html' %>
<div class="container">

    <div class="row">
        <div class="col-xs-12">
            <table class="table table-bordered">
        <caption style="text-align:center;">个人选课情况</caption>
            <thead>
            <tr>
                <th>序号</th>
                <th>课程</th>
                <th>任课教师</th>
                <th>周次</th>
                <th>上课时间</th>
                <th>上课地点</th>
                <th>撤销选课</th>
            </tr>
            </thead>
            <tbody> 
             <% @class.each do |classes| %>          
            <tr>
                <td><%=classes.id%></td>
                <td><%=classes.name%></td>
                <td><%=classes.teacher_name%></td>
                <td><%=classes.weeknu%></td>
                <td> <% classes.class_week.each do |key1,value1| %>
                    <% classes.class_time.each do |key,value| %>
                        <%if key === key1%>
                         <%=value1 + value%>
                     <%end%>
                   <%end%>
                 <% end %></td>
                <td><%classes.class_place.each do |key,value|%>
                    <%=value%>
                    <% end %></td>
                <td><%= link_to '撤销选课', frontend_classorder_path(classes),
                method: :delete,
                data: { confirm: '确定要删除这节课吗?' } %></td>
               
            </tr> 
            <%end%>
            </tbody>
            </table>
    </div>
    </div>

</div>