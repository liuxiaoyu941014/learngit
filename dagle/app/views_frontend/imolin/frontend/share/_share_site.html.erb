<!-- Sections 右 -->
<div id="fullpage">
  <!-- Welcome -->
  <section data-anchor="section_welcome">
    <div class="container">
      <div class="row">
        <div class="text-center col-sm-6 col-sm-offset-6 col-md-5 col-md-offset-6">
          <div class="thumbnail">
            <!-- <img src="<%#=@share_obj.headshot %>" class="img img-responsive" /> -->
            <div class="caption">
                <small>陌邻.商家</small>
                <p><span style="color: orange; font-size:1.4em;"><%= @share_obj.title %></span></p>
                已入驻陌邻：<%= distance_of_time_in_words_to_now(@share_obj.created_at) %>
            </div>
          </div>

          <h1 class="heading" data-animate-in="animateUpDown">
           陌邻，<br />
           让邻里不再陌生！
          </h1>

          <p class="delay_1" data-animate-in="animateUpDown">
