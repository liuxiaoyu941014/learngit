            <i class="fa fa-apple"></i> IOS Store
          </a>
          <a href="<%= @cms_site.value_for('android')%>" class="btn btn-lg btn-danger delay_2" data-animate-in="animateUpDown">
            <i class="fa fa-android"></i> Android Store
          </a>

        </div>
      </div> <!-- / .row -->
    </div><!-- / .container -->
