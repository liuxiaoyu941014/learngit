<% meta_title \
  [ @page.try(:title),
    @channel.title,
    @cms_site.description
  ].compact.join(' - ').sub(/^\s*\|/, '').strip %>
<% meta_keywords \
  [ @page.try(:keywords).blank? ? @page.try(:title) : @page.keywords,
    @channel.title,
    @channel.keywords
  ].compact.join(',').sub(/^\s*,/, '').strip %>
<% meta_description \
  @page.nil? ? @channel.description : @page.description %>

<% cms_content @page.present? ? @page.content : @channel.content %>
