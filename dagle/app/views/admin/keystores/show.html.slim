h1.page-header
  | 查看#{Keystore.model_name.human}
  .pull-right
    => link_to '编辑', edit_admin_keystore_path(@keystore), class: 'btn btn-primary'
    = link_to '返回', admin_keystores_path, class: 'btn btn-primary'

.panel
  .panel-heading
    .panel-heading-btn
      a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"
        i class="fa fa-expand"
      a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"
        i class="fa fa-minus"
  .panel-body
    .profile-container
      .profile-info
        .table-responsive
          table.table.table-profile
            tr
              td.field
                | #{Keystore.human_attribute_name(:key)}
              td
                a
                  = @keystore.key
            tr.divider
              td[colspan='2']
            tr
              td.field
                | #{Keystore.human_attribute_name(:value)}
              td
                a
                  = @keystore.value
            tr.divider
              td[colspan='2']
            tr
              td.field
                | #{Keystore.human_attribute_name(:description)}
              td
                a
                  = @keystore.description
            tr.divider
              td[colspan='2']
