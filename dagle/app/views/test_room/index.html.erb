<!DOCTYPE html>
<html>
<head>
  <title>Test Room</title>
  <%= action_cable_meta_tag %>
  <%= javascript_include_tag :cable %>
  <%= javascript_include_tag :test_room %>
  <style type="text/css">
    ul#rooms-list span.btn { cursor: pointer }
    ul#rooms-list span.btn.active { background-color: blue; color: white; }
    ul#chat-messages li.system { color: gray; }
    .hide { display: none; }
  </style>
</head>
<body>
<div class="login">
  <input class="username"> <input type="button" name="login" value="Login">
</div>
<table border="1" width="100%" class="main hide">
  <tr>
    <td width="200">
      <%= form_for '', method: :post, remote: true do %>
      Create Room: <input type="" name="new-room">
      <% end %></td>
    <td>
      Send message: <input type="" name="chat-message">
    </td>
  </tr>
  <tr>
    <td valign="top">
      <ul id="rooms-list">
        <% @rooms.each do |room| %>
          <%= render 'room_li', room: room %>
        <% end %>
      </ul>
    </td>
    <td valign="top">
      <ul id="chat-messages"></ul>
    </td>
  </tr>
</table>
</body>
</html>
