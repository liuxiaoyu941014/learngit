<%
opts = if @diymenu.new_record?
  { url: agent_diymenus_path, method: :post }
else
  { url: agent_diymenu_path(@diymenu), method: :patch }
end
%>
<%= simple_form_for @diymenu, opts do |f| %>
  <%= f.input :name  %>
  <%= f.input :button_type, as: :select, collection: Diymenu::BUTTON_TYPES.map { |k, v| ["#{k} - #{v}", k] }  %>
  <%= f.input :key  %>
  <%= f.input :url  %>
  <%= f.submit '保存', class: 'btn btn-primary' %>
  <% unless @diymenu.new_record? %>
    <%= link_to '删除', agent_diymenu_path(@diymenu), method: :delete, data: { confirm: '确认要删除吗?' }, class: 'btn btn-danger'  %>
  <% end %>
  <%= link_to '返回', agent_diymenus_path, class: 'btn btn-default'  %>
<% end %>
