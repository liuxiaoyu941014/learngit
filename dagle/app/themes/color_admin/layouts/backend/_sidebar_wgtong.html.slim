    / li class=("#{'active' if page?('admin/forage/simples')}") = link_to '数据清单', admin_forage_simples_path
    / li class=("#{'active' if page?('admin/forage/details')}") = link_to '数据详情', admin_forage_details_path
    li class=("#{'active' if page?('admin/forage/data_caches')}") = link_to '数据合并', admin_forage_data_caches_path

li class=("has-sub #{'active' if page?('admin/member_catalogs')}")
